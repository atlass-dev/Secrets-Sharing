@model RegisterViewModel

<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form class="form-group" asp-controller="Account" asp-action="Register">
					<div class="form-group">
						<b>Sign Up</b>
					</div>

					<div class="form-group">
						<label>Email: </label>
						<input class="input100" type="text" asp-for="Email" placeholder="Email">
					</div>

					<div class="form-group">
						<label>Password: </label>
						<input class="input100" type="password" asp-for="Password" placeholder="Password">
					</div>

					<div class="form-group">
						<label>Confirm password: </label>
						<input class="input100" type="password" asp-for="PasswordConfirm" placeholder="Confirm password">
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-primary">
							Sign in
						</button>
					</div>

					<div>
						Already have account?

						<a asp-action="Login" asp-controller="Account">
							Sign in now
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
